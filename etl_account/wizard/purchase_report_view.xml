<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_purchase_register_form" model="ir.ui.view">
            <field name="name">Purchase Register</field>
            <field name="model">purchase.register</field>
            <field name="arch" type="xml">
                <form string="Purchase Register">
                    <group>
                    	<group>
                    		<field name="start_date" required="1"/>
                    	</group>
                    	<group>
                    		<field name="end_date" required="1"/>
                    	</group>
                    </group>
                    <group>
                    	<field name="branch_ids" required="1" widget="many2many_tags"
                    		options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print" string="Print" data-hotkey="q"
                            colspan="1" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_purchase_register" model="ir.actions.act_window">
            <field name="name">Purchase Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.register</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_purchase_register_form"/>
        </record>
       
       <menuitem id="menu_purchase_register" parent="purchase.purchase_report_main" action="action_purchase_register" sequence="104"/>
       
       <record id="view_dn_form" model="ir.ui.view">
            <field name="name">Debit Note Register</field>
            <field name="model">purchase.register</field>
            <field name="arch" type="xml">
                <form string="Debit Note Register">
                    <group>
                    	<group>
                    		<field name="start_date" required="1"/>
                    	</group>
                    	<group>
                    		<field name="end_date" required="1"/>
                    	</group>
                    </group>
                    <group>
                    	<field name="branch_ids" required="1" widget="many2many_tags"
                    		options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <footer>
                        <button name="action_print_dn" string="Print" data-hotkey="q"
                            colspan="1" type="object" class="btn-primary"/>
                       	<button string="Close" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_dn_register" model="ir.actions.act_window">
            <field name="name">Debit Note Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.register</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_dn_form"/>
        </record>
       
       <menuitem id="menu_dn_register" parent="purchase.purchase_report_main" action="action_dn_register" sequence="105"/>
       
    </data>
</odoo>    
