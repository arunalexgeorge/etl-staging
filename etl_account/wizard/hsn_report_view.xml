<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_hsn_report_form" model="ir.ui.view">
            <field name="name">HSN Summary</field>
            <field name="model">hsn.report</field>
            <field name="arch" type="xml">
                <form string="HSN Summary">
                    <group>
                    	<group>
                    		<field name="start_date" required="1"/>
                    	</group>
                    	<group>
                    		<field name="end_date" required="1"/>
                    	</group>
                    </group>
                    <footer>
                        <button name="action_print" string="Print" data-hotkey="q"
                            colspan="1" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_hsn_report" model="ir.actions.act_window">
            <field name="name">HSN Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hsn.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
       
       <menuitem id="menu_hsn_report" parent="account.menu_finance_reports" action="action_hsn_report" sequence="105"/>
       
    </data>
</odoo>    
