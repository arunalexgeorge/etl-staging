<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account.action_report_payment_receipt" model="ir.actions.report">
            <field name="name">Payment Receipt</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account.report_payment_receipt</field>
            <field name="report_file">account.report_payment_receipt</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_print_report_payments" model="ir.actions.report">
            <field name="name">Voucher Print</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">etl_account.report_payment_print</field>
            <field name="report_file">etl_account.report_payment_print</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_payment_print_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <div class="text-center">
                        <t t-if="o.payment_type == 'inbound'">
                            <h3><strong>Receipt Voucher</strong></h3>
                        </t>
                        <t t-else="o.payment_type == 'outbound'">
                            <h3><strong>Payment Voucher</strong></h3>
                        </t>
                    </div>
                    <div class="mb-4 mt-3">
                        <div class="row">
                            <div class="col-6">
                                Voucher No: <span t-field="o.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" t-if="o.date">
                                Date: <span t-field="o.date"/>
                            </div>
                        </div>
                        <div class="row" t-if="o.journal_id">
                                Payment Method: <span t-field="o.journal_id"/>
                            </div>
                        <div class="row">
                            <div class="col-6" t-if="o.partner_type">
                                <t t-if="o.partner_type == 'customer'">
                                    Customer:
                                </t>
                                <t t-if="o.partner_type == 'supplier'">
                                    Vendor:
                                </t><span t-field="o.partner_id"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" t-if="o.amount">
                                Amount: <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                            </div>
                            <div class="col-6" t-if="o.ref">
                                Memo: <span t-field="o.ref"/>
                            </div>
                        </div>
                    </div>

                    <t t-set="partials" t-value="o.move_id._get_reconciled_invoices_partials()[0]"/>
                    <t t-set="invoices" t-value="{partial[2].move_id for partial in partials}"/>
                    <!-- Check if invoices include different currencies -->
                    <t t-foreach="invoices" t-as="inv">
                        <t t-if="any(inv.currency_id != par[2].currency_id for par in inv._get_reconciled_invoices_partials()[0])" t-set="otherCurrency" t-value="True"/>
                    </t>

                    <t t-if="invoices">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th><span>Invoice Date</span></th>
                                    <th><span>Invoice Number</span></th>
                                    <th><span>Reference</span></th>
                                    <!-- Add a column if there are different currencies -->
                                    <th t-if="otherCurrency" class="text-end"><span>Amount In Currency</span></th>
                                    <th class="text-end"><span>Amount</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="invoices" t-as="inv">
                                    <!-- MOVE -->
                                    <t t-if="inv.move_type != 'entry'">
                                        <tr>
                                            <td class="text-left"><span t-field="inv.invoice_date"/></td>
                                            <td class="text-center"><span t-field="inv.name"/></td>
                                            <td class="text-center"><span t-field="inv.ref"/></td>
                                            <td t-if="otherCurrency"/>
                                            <td class="text-end"><span t-field="inv.amount_total"/></td>
                                        </tr>
                                        <!-- PAYMENTS/REVERSALS -->
                                        <tr t-foreach="inv._get_reconciled_invoices_partials()[0]" t-as="par">
                                            <t t-set="payment" t-value="par[2].move_id"/>
                                            <td><span t-field="payment.date"/></td>
                                            <td><span t-field="payment.name"/></td>
                                            <td><span t-field="payment.ref"/></td>
                                            <t t-set="amountPayment" t-value="-payment.amount_total"/>
                                            <t t-set="amountInvoice" t-value="-par[1]"/>
                                            <t t-set="currencyPayment" t-value="payment.currency_id"/>
                                            <t t-set="currencyInvoice" t-value="inv.currency_id"/>
                                            <!-- Fill the column "Amount In Currency" only if necessary -->
                                            <td t-if="otherCurrency" class="text-end"><span t-if="currencyPayment != currencyInvoice" t-esc="amountPayment" t-options="{'widget': 'monetary', 'display_currency': currencyPayment}"/></td>
                                            <td class="text-end"><span t-esc="amountInvoice" t-options="{'widget': 'monetary', 'display_currency': currencyInvoice}"/></td>
                                        </tr>
                                        <!-- BALANCE -->
                                        <tr>
<!--                                            <td/>-->
                                            <td colspan="3" class="text-center"><strong>Due Amount for <span t-field="inv.name"/></strong></td>
<!--                                            <td/>-->
                                            <td t-if="otherCurrency"/>
                                            <td class="text-end"><strong><span t-field="inv.amount_residual"/></strong></td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="container">
                        <div class="row">
                            <div class="col-auto col-3 mw-100 mb-2">
                                <p style="font-size:15px;">Checked By:</p>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2">
                                <p style="font-size:15px;">Prepared By:</p>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2">
                                <p style="font-size:15px;">Authorized Signatory:</p>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_payment_print">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                    <t t-call="etl_account.report_payment_print_document" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>