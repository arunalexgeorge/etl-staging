<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    
    <record id="approval_product_line_view_tree" model="ir.ui.view">
        <field name="name">approval.product.line.form</field>
        <field name="model">approval.product.line</field>
        <field name="inherit_id" ref="approvals.approval_product_line_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="current_stock" force_save="1" readonly="1" width="30"/>
                <field name="consumption_qty" invisible="0" force_save="1" readonly="1" width="30"/>
                <field name="partner_id" force_save="1"
                	options="{'no_open': True, 'no_create': True, 'no_create_edit':True}" context="{'product_id':product_id}"
                		attrs="{'readonly': [('allow_editing', '!=', True)]}"/>
                <field name="vendor_price" force_save="1" attrs="{'readonly': [('allow_editing', '!=', True)]}"/>
                <field name="allow_editing" invisible="1"/>
                <field name="state" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',('allow_editing', '!=', True), ('state', 'not in', ('new', 'pending'))]}</attribute>
                <attribute name="string">UoM</attribute>
                <attribute name="width">10</attribute>
            </xpath>
            <xpath expr="//field[@name='quantity']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in', ('new', 'pending'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in', ('new', 'pending'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in', ('new', 'pending'))]}</attribute>
            </xpath>
        </field>
    </record>
    
</data></odoo>