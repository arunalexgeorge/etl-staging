<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_stock_ageing_form" model="ir.ui.view">
            <field name="name">Stock Ageing Report</field>
            <field name="model">stock.ageing</field>
            <field name="arch" type="xml">
                <form string="Stock Ageing Report">
                    <group>
                    	<field name="date" required="1"/>
                    </group>
                    <group>
                    	<field name="branch_ids" required="1" options="{'no_create_edit':True, 'no_create':True,'no_open': True}" widget="many2many_tags"/>
                    </group>
                    <group>
                    	<group string="Categories">
                    		<field name="categ_ids" string=" " required="1" options="{'no_create_edit':True, 'no_create':True,'no_open': True}"/>
                    	</group>
                    	<group string="Locations">
                    		<field name="location_ids" string=" " domain="[('usage', '=', 'internal')]" 
                    			options="{'no_create_edit':True, 'no_create':True,'no_open': True}">
                    			<tree>
                    				<field name="display_name"/>
                    			</tree>
                    		</field>
                    	</group>
                    </group>
                    <footer>
                        <button name="action_print" string="Print" data-hotkey="q"
                            colspan="1" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_ageing" model="ir.actions.act_window">
            <field name="name">Stock Ageing Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.ageing</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
       
       <menuitem id="menu_stock_ageing" parent="stock.menu_warehouse_report" action="action_stock_ageing" sequence="501"/>
       
    </data>
</odoo>    
