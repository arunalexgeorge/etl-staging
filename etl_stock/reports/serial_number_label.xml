        <field name="report_type">qweb-pdf</field>
        <field name="report_name">etl_stock.serial_number_label_template</field>
        <field name="report_file">etl_stock.serial_number_label_template</field>
        <field name="paperformat_id" ref="etl_stock.paperformat_serial_number_label"/>
        <field name="print_report_name">'Label_%s' % object.name</field>
        <field name="binding_type">report</field>
