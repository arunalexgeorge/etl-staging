    <record id="action_rm_label" model="ir.actions.report">
        <field name="name">RM Label</field>
        <field name="model">stock.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">etl_stock.rm_label_template</field>
        <field name="report_file">etl_stock.rm_label_template</field>
        <field name="paperformat_id" ref="etl_stock.paperformat_rm_label"/>
        <field name="print_report_name">'Label_%s' % object.product_id.name</field>
        <field name="binding_type">report</field>
    </record>
    
