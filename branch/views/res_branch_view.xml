<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        

        <!-- Form View of branch-->
        <record id="view_branch_form" model="ir.ui.view">
            <field name="name">branch.res.branch.view.form</field>
            <field name="model">res.branch</field>
            <field name="arch" type="xml">
                <form string="Branch">
                	<header>
                	</header>
                    <sheet>
                    	<group name="main">
                    		<group>
		                        <field name="name"/>
		                        <field name="code"/>
		                        <field name="partner_id" required="1"/>
                        	</group>
                        	<group>
		                        <field name="address" required="1"/>
		                        <field name="company_id" invisible="1"/>
                        	</group>
                    	</group>
                    	<group string="Transit Locations">
                    		<field name="branch_location_ids" nolabel="1" colspan="2">
                    			<tree editable="bottom">
                    				<field name="inter_branch_id" required="1" options="{'no_create_edit':True, 'no_create':True,'no_open': True}"/>
		                        	<field name="location_id" required="1" domain="[('usage', '=', 'internal')]" options="{'no_create_edit':True, 'no_create':True,'no_open': True}"/>
                    			</tree>
                    			<form>
                    			  <group>
                    			    <field name="inter_branch_id" required="1" options="{'no_create_edit':True, 'no_create':True,'no_open': True}"/>
		                        	<field name="location_id" required="1" domain="[('usage', '=', 'internal')]" options="{'no_create_edit':True, 'no_create':True,'no_open': True}"/>
                    			  </group>
                    			</form>
                    		</field>
                    	</group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View of branch-->
        <record id="branch_res_branch_view_tree" model="ir.ui.view">
            <field name="name">branch.res.branch.view.tree</field>
            <field name="model">res.branch</field>
            <field name="arch" type="xml">
                <tree string="Branch">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!--View action for branch form view and tree view-->
        <record id="branch_action_res_branch" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.branch</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new branch.
                </p>
            </field>
        </record>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="branch_menu_res_branch" name="Branches"  parent="base.menu_users" action="branch_action_res_branch" />

    </data>
</odoo>
