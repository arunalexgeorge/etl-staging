<odoo>

    <record id="action_serial_number_label" model="ir.actions.report">
        <field name="name">Serial No Label</field>
        <field name="model">mrp.serial</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">etl_mrp.serial_number_label_template</field>
        <field name="report_file">etl_mrp.serial_number_label_template</field>
        <field name="paperformat_id" ref="etl_stock.paperformat_serial_number_label"/>
        <field name="print_report_name">'Label_%s' % object.name</field>
        <field name="binding_type">report</field>
    </record>
    
    <template id="serial_number_label_template">
        <t t-foreach="docs" t-as="o">
            <p style="page-break-before:always;"> </p>
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-set="barcode_size" t-value="'width:85mm;height:14mm'"/>
                    <div class="o_label_4x12 text-center">
                        <b><p style="line-height:20px;font-size:15pt">EASTERN TREADS LTD</p></b>
                        <p style="line-height:1px;font-size:11pt;">Oonnukal P.O., Kothamangalam, Kerala.</p>
                        <p style="line-height:1px;font-size:8pt;">CUSTOMER CARE NUMBER: +91-8589994848</p>
                    </div>
                    <br/><br/>
                    <t t-if="o.production_id.product_id.categ_id.fg_type == 'pctr'">
                        <div class="o_label_4x12 text-center">
                            <b><div t-out="o.name" t-options="{'widget': 'barcode', 'img_style': barcode_size}"/></b>
                            <div class="o_label_4x12 text-center" t-out="o.name"/><br/>
                            <p style="line-height:2px;font-size:10pt;"><u><b>PRECURED TREAD RUBBER(Made in India)</b></u></p>
                        </div>
                        <br/>
                        <table style="border:0px solid white;width=100%">
                            <tr>
                                <td width="40%" style="font-size:11pt;"><b>PRODUCT NAME</b></td>
                                <td width="1%">:</td>
                                <td width="59%" style="font-size:13pt;"><b><span t-field="o.production_id.product_id.name"/></b></td>
                            </tr>
                            <tr style="font-size:11pt;">
                                <td width="40%"><b>TYRE SIZE</b></td>
                                <td width="1%">:</td>
                                <td width="59%"><span t-field="o.production_id.product_id.tyre_size"/></td>
                            </tr>
                            <t t-if="o.production_id.label_type != 'export_us'">
	                            <tr style="font-size:11pt;">
	                                <td width="40%"><b>BASE WIDTH(mm)</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%"><span t-field="o.production_id.product_id.product_width"/></td>
	                            </tr>
	                        </t>
	                        <t t-if="o.production_id.label_type == 'export_us'">
	                            <tr style="font-size:11pt;">
	                                <td width="40%"><b>BASE WIDTH</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%"><span t-esc="o.production_id.product_id.get_product_width_us()"/></td>
	                            </tr>
                            </t>
                            <t t-if="o.production_id.label_type == 'local'">
	                            <tr style="font-size:11pt;">
	                                <td width="40%"><b>LENGTH(Inch)</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%"><span t-field="o.production_id.product_id.product_length"/></td>
	                            </tr>
	                        </t>
	                        <t t-if="o.production_id.label_type == 'export'">
	                            <tr style="font-size:11pt;">
	                                <td width="40%"><b>LENGTH(mm)</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%"><span t-field="o.production_id.product_id.product_length_mm"/></td>
	                            </tr>
	                       	</t>
	                       	<t t-if="o.production_id.label_type == 'export_us'">
	                            <tr style="font-size:11pt;">
	                                <td width="40%"><b>LENGTH</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%"><span t-esc="o.production_id.product_id.get_product_length_us()"/></td>
	                            </tr>
	                       	</t>
	                       	<t t-if="o.production_id.label_type != 'export_us'">
	                            <tr>
	                                <td width="40%" style="font-size:11pt;"><b>WEIGHT(Kg)</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%" style="font-size:13pt;"><b><span t-field="o.quantity"/></b></td>
	                            </tr>
	                        </t>
	                        <t t-if="o.production_id.label_type == 'export_us'">
	                            <tr>
	                                <td width="40%" style="font-size:11pt;"><b>WEIGHT in Pound</b></td>
	                                <td width="1%">:</td>
	                                <td width="59%" style="font-size:13pt;"><b><span t-esc="o.get_pound(o.quantity)"/></b></td>
	                            </tr>
	                        </t>
                            <tr>
                                <td width="40%" style="font-size:11pt;"><b>LOT NO</b></td>
                                <td width="1%">:</td>
                                <td width="59%" style="font-size:13pt;"><b><span t-field="o.production_id.lot_producing_id"/></b></td>
                            </tr>
                            <tr>
                                <td width="40%" style="font-size:11pt;"><b>SL NO</b></td>
                                <td width="1%">:</td>
                                <td width="59%" style="font-size:13pt;"><b><span t-field="o.name"/></b></td>
                            </tr>
                            <tr style="font-size:11pt;">
                                <td width="40%"><b>DATE OF MFG</b></td>
                                <td width="1%">:</td>
                                <td width="59%"><span t-field="o.production_id.date_planned_start" t-options="{'widget': 'date'}"/></td>
                            </tr>
                            <t t-if="o.production_id.label_type == 'local'">
                                <tr style="font-size:11pt;">
                                    <td width="40%"><b>MRP(Including Tax)</b></td>
                                    <td width="1%">:</td>
                                    <td width="59%"><span t-field="o.mrp"/></td>
                                </tr>
                            </t>
                        </table>
                        <br/>
                    </t>
                    <t t-if="o.production_id.product_id.categ_id.fg_type == 'ct'">
                        <div class="o_label_4x12 text-center">
                            <div t-out="o.name" t-options="{'widget': 'barcode', 'img_style': barcode_size}"/>
                            <div class="o_label_4x12 text-center" t-out="o.name"/><br/>
                            <p style="line-height:2px;font-size:10pt;"><b><u>CONVENTIONAL TREAD(Made in India)</u></b></p>
                            <p style="line-height:2px;font-size:10pt;text-align:center"><u><b>(HOT RUBBER)</b></u></p>
                        </div>
                        <table style="border:0px solid white;width=100%">
                            <tr>
                                <td width="40%" style="font-size:11pt;"><b>PRODUCT NAME</b></td>
                                <td width="1%">:</td>
                                <td width="59%" style="font-size:13pt;"><b><span t-field="o.production_id.product_id.name"/></b></td>
                            </tr>
